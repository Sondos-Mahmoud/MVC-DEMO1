@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!DOCTYPE html>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @*header*@
    <header>
        <center>
            <nav class="mt-5">
                <a href="/Home/Index" class="btn btn-primary m-2">Home</a>
                <a href="/Home/Privacy" class="btn btn-warning m-2">Privacy</a>
                <a href="/Home/AboutUs" class="btn btn-success m-2">About Us</a>
                <a href="/Home/ContactUs" class="btn btn-secondary m-2">Contact Us</a>
            </nav>
        </center>
    </header>
    <center>
        <nav class="mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-2">Home</a>
            <a asp-controller="Home" asp-action="Privacy" class="btn btn-warning m-2">Privacy</a>
            <a asp-controller="Home" asp-action="AboutUs" class="btn btn-success m-2">About Us</a>
            <a asp-controller="Home" asp-action="ContactUs" class="btn btn-secondary m-2">Contact Us</a>
        </nav>
    </center>
    <div>
        @RenderBody()
    </div>

    @*footer*@
    <footer>
        <center>
            <div>
                <p>copy rights &copy; route @DateTime.Now.Year </p>
            </div>
        </center>
    </footer>
</body>
</html>
